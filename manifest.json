{
  "manifest_version": 3,
  "name": "SimpleTerms",
  "version": "1.0.1",
  "description": "AI-powered privacy policy analyzer that provides instant summaries and risk scores for any website. Understand what data companies collect in plain language.",
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "SimpleTerms - Analyze Privacy Policy"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],

  "background": {
    "service_worker": "scripts/background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "author": "SimpleTerms Team",
  "minimum_chrome_version": "88"
}